{
    "n_gpu": 1,
    "optimizer_generator": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "optimizer_discriminator": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "train_d_every": 6,
    "last_d_lower_bound": 1.4,
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 9999,
            "gamma": 1.0
        }
    },
    "trainer": {
        "epochs": 300,
        "save_dir": "saved/",
        "save_freq": 10,
        "monitor_mode": "min",
        "monitored_loader": "valid_mnist",
        "monitored_metric": "avg_loss"
    },
    "trainer_args": {},
    "visualization": {
        "tensorboardX": true,
        "log_dir": "saved/runs"
    },
    "arch": {
        "type": "MnistGAN",
        "args": {
            "spectral_normalization": true
        }
    },
    "optimize_strategy": "GAN",
    "data_loader": {
        "type": "MnistDataLoader",
        "args": {
            "data_dir": "../datasets/mnist",
            "batch_size": 16,
            "validation_split": 0.1,
            "num_workers": 4,
            "img_size": 64,
            "name": "mnist"
        }
    },
    "losses": {
    },
    "gan_losses": {
        "generator": {
            "type": "HingeLossG",
            "args": {
                "nickname": "hinge_loss_generator",
                "weight": 1
            }
        },
        "discriminator": {
            "type": "HingeLossD",
            "args": {
                "nickname": "hinge_loss_discriminator",
                "weight": 1
            }
        }
    },
    "metrics": {
    },
    "log_step": 200,
    "verbosity": 2,
    "name": "GAN_template_train_config"
}
